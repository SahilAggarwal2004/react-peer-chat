{
  "name": "react-peer-chat",
  "version": "0.8.5",
  "description": "An easy to use react component for impleting peer-to-peer chatting.",
  "license": "MIT",
  "author": "Sahil Aggarwal <aggarwalsahil2004@gmail.com>",
  "contributors": [],
  "homepage": "https://github.com/SahilAggarwal2004/react-peer-chat#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SahilAggarwal2004/react-peer-chat.git"
  },
  "bugs": {
    "url": "https://github.com/SahilAggarwal2004/react-peer-chat/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./icons": "./dist/icons.js",
    "./types": "./dist/types.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "pnpm i && pnpm run compile",
    "compile": "tsup",
    "dev": "tsup --watch",
    "dry-release": "release-it --ci --dry-run",
    "publish": "pnpm login && pnpm publish",
    "release": "release-it --ci"
  },
  "dependencies": {
    "peerjs": "^1.5.5"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/react": "^19.2.7",
    "release-it": "^19.2.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "keywords": [
    "react",
    "chat",
    "component",
    "peer",
    "peerjs",
    "p2p",
    "peer-to-peer",
    "webrtc",
    "react-peer-chat",
    "typescript",
    "p2p-chat",
    "text-chat",
    "voice-chat",
    "audio-chat"
  ]
}
