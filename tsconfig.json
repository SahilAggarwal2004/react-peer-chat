{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "jsx": "react"
  }
}